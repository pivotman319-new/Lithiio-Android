<?xml version='1.0' encoding='utf-8'?>
<widget id="com.milkgames.lithiio" version="1.0.4" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
        <param name="onload" value="true" />
    </feature>
    <allow-navigation href="cdvfile:*" />
    <feature name="FileTransfer">
        <param name="android-package" value="org.apache.cordova.filetransfer.FileTransfer" />
    </feature>
    <feature name="FilePath">
        <param name="android-package" value="com.hiddentao.cordova.filepath.FilePath" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Clipboard">
        <param name="android-package" value="com.verso.cordova.clipboard.Clipboard" />
    </feature>
    <feature name="IntentPlugin">
        <param name="android-package" value="com.napolitano.cordova.plugin.intent.IntentPlugin" />
    </feature>
    <feature name="FirebaseAnalytics">
        <param name="android-package" value="by.chemerisuk.cordova.firebase.FirebaseAnalyticsPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="FileChooser">
        <param name="android-package" value="com.megster.cordova.FileChooser" />
    </feature>
    <name>Lithi.io</name>
    <description>
        A mobile application for the Lithi.io file sharing service.
    </description>
    <author email="memegames1337@gmail.com" href="https://milkgames.pw">
        MilkGames
    </author>
    <icon density="ldpi" src="icons/ldpi.png" />
    <icon density="mdpi" src="icons/mdpi.png" />
    <icon density="hdpi" src="icons/hdpi.png" />
    <icon density="xhdpi" src="icons/xhdpi.png" />
    <icon density="xxhdpi" src="icons/xxhdpi.png" />
    <icon density="xxxhdpi" src="icons/xxxhdpi.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <resource-file src="google-services.json" target="google-services.json" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="AndroidLaunchMode" value="singleTask" />
</widget>
